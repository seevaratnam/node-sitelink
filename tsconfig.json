{
    "compilerOptions": { 
      "target": "es6", 
      "module": "commonjs",
      "strict": true, 
      "declaration": true,
      "outDir": "./dist",
      "typeRoots": ["./node_modules/@types"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "moduleResolution": "node",
      "allowJs": true,
      "alwaysStrict": true
    },
    "exclude": [
        "tests",
        "dist",
        "node_modules"
    ]
}